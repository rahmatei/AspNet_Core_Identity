@page
@model AAASamples.Pages.Users.ListModel
@{
}
<table class="table table-striped table-bordered">
    <tr>
        <td>Id</td>
        <td>UserName</td>
        <td>Email</td>
        <td>Action</td>
    </tr>
    @if (Model.Users.Count() < 1)
    {
        <tr>
            <td colspan="4">
                Three is no user in database
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model.Users)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td><a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                    <form method="post">
                        <input type="hidden" name="id" value="@item.Id"/>
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                    </td>
            </tr>
        }
    }
</table>
<a class="btn btn-success" asp-page="Create">Create</a>